<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0.0"
    android:compileSdkVersion="33"
    android:compileSdkVersionCodename="13"
    package="com.hardcodedjoy.example.clockfullscreen"
    platformBuildVersionCode="33"
    platformBuildVersionName="13">
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="33" />

    <application
        android:theme="@style/AppTheme"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="false"
        android:supportsRtl="false"
        android:roundIcon="@mipmap/ic_launcher_round">

        <!-- Home / Launcher activity (user will be prompted to pick a Home app) -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:launchMode="singleTask">
            <!-- Candidate for being the HOME (default launcher) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Show an icon in the app launcher (app drawer) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Your existing fullscreen clock activity (no launcher/home intent filters) -->
        <activity
            android:name="com.hardcodedjoy.example.clockfullscreen.MainActivity"
            android:exported="true"
            android:launchMode="singleTop" />
    </application>
</manifest>
